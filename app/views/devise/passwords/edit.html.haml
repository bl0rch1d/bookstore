%main.container.general-main-wrap.mt-100
  .text-center
    %p.in-gold-500.font-18.mb-25= t("password.edit")
  
  .general-form
    = form_with(scope: resource_name, url: password_path(resource_name), method: :put) do |f|
      = render "devise/shared/error_messages", resource: resource
      = f.hidden_field :reset_password_token
      
      .form-group.mb-30
        = f.label :password, t("labels.new_password")
        = f.password_field :password,  placeholder: 'New Password', class: "form-control", id: "new_password", pattern: "^(?=.*[a-z])(?=.*[A-Z])(?=.*\d)[a-zA-Z\d]{8,}$"
      .form-group.mb-40
        = f.label :password_confirmation, t("labels.password_confirmation")
        = f.password_field :password_confirmation,  placeholder: t("placeholders.confirm_password"), class: "form-control", id: "confirm_password", pattern: "^(?=.*[a-z])(?=.*[A-Z])(?=.*\d)[a-zA-Z\d]{8,}$"
      
      .text-center
        = f.submit t("password.save"), class: "btn btn-default mb-10"
