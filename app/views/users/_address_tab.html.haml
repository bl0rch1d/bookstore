#address.tab-pane.fade.in.active{role: "tabpanel"}
  .hidden-xs.hidden-sm
    .row
      .col-md-5
        %h3.general-subtitle.mt-0= t("address.billing")
        %p.general-info-text= t("form.all_fields_required")
      .col-md-5.col-md-offset-1
        %h3.general-subtitle.mt-0= t("address.shipping")
        %p.general-info-text= t("form.all_fields_required")
  
  .row
    = simple_form_for current_user, url: settings_addresses_path, method: :put do |form|
      .col-md-5.mb-40
        .visible-xs.visible-sm
          %h3.general-subtitle.mt-0= t("address.billing")
          %p.general-info-text= t("form.all_fields_required")

        = render partial: 'checkout/address_form', locals: { builder: form, id: :billing_address, form: @billing_address_form }
        = form.submit t("form.save"), class: "btn btn-default center-block mb-20 mt-25", id: 'billingSave'
      
    = simple_form_for current_user, url: settings_addresses_path, method: :put do |form|
      .col-md-5.col-md-offset-1.mb-25
        .visible-xs.visible-sm
          %h3.general-subtitle.mt-0= t("address.shipping")
          %p.general-info-text= t("form.all_fields_required")

        = render partial: 'checkout/address_form', locals: { builder: form, id: :shipping_address, form: @shipping_address_form }
        = form.submit t("form.save"), class: "btn btn-default center-block mb-20 mt-25", id: 'shippingSave'