.mb-35
  %h3= t("book.best_sellers")
  .row
    - @best_sellers.each do |book|
      .col-sm-6.col-md-3
        .general-thumb-wrap
          .thumbnail.general-thumbnail
            = image_tag(book.decorate.cover, class: 'img-shadow general-thumbnail-img')
            .thumb-hover
              .general-thumb-link-wrap
                = link_to book_path(book.id), class: "thumb-hover-link" do
                  %i.fa.fa-eye.thumb-icon{'aria-hidden': "true"}
                = link_to order_items_path(book_id: book), method: :post, class: "thumb-hover-link" do
                  %i.fa.fa-shopping-cart.thumb-icon
        .mb-35
          .clearfix
            %p.pull-right.font-16.in-gold-500= book.decorate.price_in_currency
            %p.title.mr-55= book.title
          %span.divider-sm
          %p.lead.small= book.decorate.format_authors
