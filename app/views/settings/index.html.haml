%main.container
  %h1.general-title-margi= t("customer_menu.settings")
  %ul.nav.clearfix.mb-20{role: "tablist"}
    %li.tab-item.active{role: "presentation"}
      %a.tab-link{href: "#address", 'aria-controls': "address", role: "tab", 'data-toggle': "tab"}= t("address.title")
    %li.tab-item{role: "presentation"}
      %a.tab-link{href: "#privacy", 'aria-controls': "privacy", role: "tab", 'data-toggle': "tab"}= t("privacy")
  
  .tab-content
    = render 'address_tab'
    
    = render 'privacy_tab'

