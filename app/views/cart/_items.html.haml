.hidden-xs
  %table.table.table-hover
    %tr.no-hover
      %th.col-pic.pl-0
        %span.in-grey-600 Product
      %th.col-title
      %th.col-price
        %span.in-grey-600 Price
      %th.col-quantity
        %span.in-grey-600 Quantity
      %th.col-total
        %span.in-grey-600 SubTotal
      %th.col-close
    - @items.each do |item|
      %tr
        %td
          .general-img-wrap-table
            = link_to book_path(item.book) do
              = image_tag(item.book.images.first.variant(resize: '100x100'), class: 'cart-img-shadow pull-left')
        %td
          %p.title= item.book.title
        %td
          %span.font-16.in-gold-500= number_to_currency(item.price, unit: '€')
        %td
          .input-group
            - if item.quantity > 1
              = link_to order_item_path(item, quantity: -1, book_id: item.book), method: :patch, class: "input-link" do
                %i.fa.fa-minus.line-heaght-40
            - else
              %a.input-link
                %i.fa.fa-minus.line-heaght-40
            
            %input.form-control.quantity-input{type: "text", value: "#{item.quantity}", disabled: true}
            = link_to order_item_path(item, quantity: 1, book_id: item.book), method: :patch, class: "input-link" do
              %i.fa.fa-plus.line-heaght-40
        %td
          %span.font-16.in-gold-500= number_to_currency(item.subtotal, unit: '€')
        %td
          = link_to order_item_path(item), method: :delete, class: "close general-cart-close" do
            %span{'aria-hidden': "true"} &times;