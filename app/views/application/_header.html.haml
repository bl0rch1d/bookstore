%header.navbar.navbar-default
  .container
    .navbar-header
      %button.navbar-toggle.pull-left{type: "button", 'data-toggle': "collapse", 'data-target': "#navbar"}
        %span.sr-only
        %span.icon-bar
        %span.icon-bar
        %span.icon-bar
      = link_to t('store_title'), root_path, class: "navbar-brand"
      = link_to cart_index_path, class: "shop-link pull-right visible-xs" do
        %span.shop-icon
          %span.shop-quantity= current_order.order_items.count
    = link_to cart_index_path, class: "shop-link pull-right hidden-xs" do
      %span.shop-icon
        %span.shop-quantity= current_order.order_items.count

    #navbar.navbar-collapse.collapse.pl-30{'aria-expanded': "false"}
      
      %ul.nav.navbar-nav
        %li
          = link_to t('store_menu.home'), root_path
        %li.dropdown
          %a.dropdown-toggle{href: "#", 'data-toggle': "dropdown", role: "button", 'aria-haspopup': "true", 'aria-expanded': "false"}= t('store_menu.shop')
          %ul.dropdown-menu
            %li
              = link_to  t('categories.all'), category_books_path(0)
            - Category.all.each do |category|
              %li
                = link_to category.title, category_books_path(category)
    
        %li.dropdown
          - if user_signed_in?
            %a.dropdown-toggle{href: "#", 'data-toggle': "dropdown", role: "button", 'aria-haspopup': "true", 'aria-expanded': "false"}= t("store_menu.my_account")
            %ul.dropdown-menu
              %li
                = link_to t("user_menu.orders"), orders_path, class: "collapse-link"
              %li
                = link_to t("user_menu.settings"), settings_path, class: "collapse-link"
              %li.divider{role: "separator"}
                %li
                  = link_to t("auth.sign_out"), destroy_user_session_path, method: :delete, class: "collapse-link"
            
          - else
            %a.dropdown-toggle{href: "#", 'data-toggle': "dropdown", role: "button", 'aria-haspopup': "true", 'aria-expanded': "false"}= t("store_menu.my_account")
            %ul.dropdown-menu
              %li
                = link_to t("auth.sign_out"), new_user_registration_path, class: "collapse-link"
              %li
                = link_to t("auth.log_in"), new_user_session_path, class: "collapse-link"
