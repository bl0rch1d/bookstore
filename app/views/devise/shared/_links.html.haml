.text-center
  - if controller_name != 'sessions'
    = link_to t('auth.log_in'), new_session_path(resource_name), class: "help-block in-gold-500"

  - if devise_mapping.registerable? && controller_name != 'registrations'
    = link_to t('auth.sign_up'), new_registration_path(resource_name), class: "help-block in-gold-500"

  - if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations'
    = link_to t('user.password.forgot'), new_password_path(resource_name), class: "help-block in-gold-500"

  - if devise_mapping.confirmable? && controller_name != 'confirmations'
    = link_to t('auth.confirmation.not_receive'), new_confirmation_path(resource_name), class: "help-block in-gold-500"

  - if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks'
    = link_to t('auth.lock.not_receive'), new_unlock_path(resource_name), class: "help-block in-gold-500"

  - if devise_mapping.omniauthable?
    - resource_class.omniauth_providers.each do |provider|
      = link_to "Sign in with #{OmniAuth::Utils.camelize(provider)}", omniauth_authorize_path(resource_name, provider), class: "help-block in-gold-500"
